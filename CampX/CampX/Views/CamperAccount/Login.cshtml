@model CampX.BusinessLogic.Implementations.Account.Models.LoginModel
<link rel="stylesheet" href="~/css/Form.css" type="text/css" />
@{
    ViewData["Title"] = "Login";
}
<div id="formDiv">

    <h1>Autentificare</h1>

    <div class="row">
        <div>
            @if (Model.AreCredentialsInvalid)
            {
                <div><span style="color:red">Credențiale incorecte</span></div>
            }
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Parolă</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input id="submitButton" type="submit" value="Autentificare" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
