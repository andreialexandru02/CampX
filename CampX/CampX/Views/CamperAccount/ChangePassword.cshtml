@model CampX.BusinessLogic.Implementations.Account.Models.ChangePasswordModel
@{
    ViewData["Title"] = "View";
}
@using CampX.Common.ViewModels;
@inject CurrentCamperDTO currentCamper

<h4>Schimba Parola</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" asp-controller="CamperAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" type="password" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span> 
            </div>
            <input asp-for="Id" id="currentCamper" type="hidden" value=@currentCamper.Id>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
