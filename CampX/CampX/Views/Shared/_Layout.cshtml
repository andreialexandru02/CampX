<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CampX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CampX.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePage.css" type="text/css" />

    <!--Js  -->
         <script type="text/javascript" defer src="~/js/HomePage.js"></script>
    
   
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
               @*<a  class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CampX</a>*@
               <img id="campXLogo" src="~/Images/icons8-tent-48.png" alt="Tent Logo">
               <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                     
                        <li class="nav-item">
                            <a href="~/CamperAccount/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a href="~/CamperAccount/Register">Register</a>
                        </li>
                        <li  class="nav-item">
                            <a href="~/CamperAccount/Profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a  href="~/Map/ShowMap">Map</a>
                        </li>
                        <li class="nav-item">
                            <a  href="~/Map/CampsiteDetails/15">Campsite15</a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Trip/ShowMap">TripsMap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CampX - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
