@model CampX.BusinessLogic.Implementations.Map.Models.EditCampsiteModel
@{
    ViewData["Title"] = "View";
}
<script type="text/javascript" src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin="" />

<link rel="stylesheet" href="~/css/Map/AddCampsite.css" type="text/css" />
<script type="text/javascript" defer src="~/js/TentIcon.js"></script>
<script type="text/javascript" defer src="~/js/Map/AddEditCampsite.js"></script>

<h1>Edit Campsite</h1>


<hr />



<div id="map"></div>
@foreach (var imgId in Model.stringImageIds.Split(','))
{
    <img style="height: 225px; display: inline-block;" src="/Image/GetImgContent?id=@imgId"/>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCampsite" asp-controller="Map" asp-route-id="@ViewContext.RouteData.Values["id"]" enctype="multipart/form-data" method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label"></label>
                <input type="range" min="1" max="5" asp-for="Difficulty" class="form-control" />
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label id = " lat_form""></label>
                <input id="LatInput" asp-for="Latitude" class="form-control" value="@Model.Latitude" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label" id="lng_form"></label>
                <input id="LngInput" asp-for="Longitude" class="form-control" value ="@Model.Longitude" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label" id="img_form"></label>
                <input asp-for="Images" type="file" name="Images" id="ImageData" multiple/>
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <input asp-for="stringImageIds" value = "@Model.stringImageIds" type= "hidden" />
            <br></br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>                   
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
