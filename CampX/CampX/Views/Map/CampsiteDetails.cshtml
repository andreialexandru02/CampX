<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

      
    <div>
       Nume: @Model.Name
    </div>
    <div>
        Descriere: @Model.Description
    </div>
    <div>
       Dificultate: @Model.Difficulty
    </div>
    <div id="ratingAverage">
        Rating:  
    </div>
    <div id="Lat">
        @Model.Latitude
    </div>
    <div id="Lng">
        @Model.Longitude
    </div>
    
<div id="map"></div>

@foreach(var imgId in Model.ImageIds)
{
    <img style="height: 225px; display: inline-block;" src="/Image/GetImgContent?id=@imgId" />
    
}

<a style="display: block;" asp-controller="Map" asp-action="Delete" asp-route-id="@ViewContext.RouteData.Values["id"]"> Delete Campsite</a>
<a style="display: block;" asp-controller="Map" asp-action="EditCampsite" asp-route-id="@ViewContext.RouteData.Values["id"]"> Edit Campsite</a>

<div id="review-container">Reviews

    <div id="reviewInput" class="row">
        <div class="col-md-6" >
            <div class="form-group">
                <label class="control-label">Descriere</label>
                <textarea id="expandableField" class="form-control"></textarea>
            </div>
             
            <div id="ratingDiv" class="form-group">
                <label class="control-label">Rating review</label>
                <input id="reviewRating" type="range" min="1" max="5" disabled class="form-control" />
            </div>
            <div id= "reviewButtonDiv" >
                <button id="reviewButton" type="button" class="btn btn-primary">Add Review</button>
            </div>
        </div>

    </div>
</div>