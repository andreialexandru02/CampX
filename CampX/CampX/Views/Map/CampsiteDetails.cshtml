<link rel="stylesheet" href="~/css/Map/CampsiteDetails.css" type="text/css" />
<script type="text/javascript" defer src="~/js/TentIcon.js"></script>
<script type="text/javascript" defer src="~/js/Map/CampsiteDetails.js"></script>
